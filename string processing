#include <iostream>
#include <string.h>
using namespace std;

int main() {
   // Complete the program
  
    string str1,str2;
    cin>>str1>>str2;
    cout<<str1.length()<<" "<<str2.length();
    cout<<"\n"<< str1+str2;
    char c;
    c=str1[0];
    str1[0]=str2[0];
    str2[0]=c;
    cout<<"\n"<<str1<<"\n"<<str2;
    return 0;
}
